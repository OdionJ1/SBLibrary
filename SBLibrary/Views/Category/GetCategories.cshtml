@model IEnumerable<SBLibrary.Data.Models.Domain.Category>

@{
    ViewBag.Title = "GetCategories";
    Layout = "~/Views/Shared/_BookLayout.cshtml";
}

<h2>GetCategories</h2>

<p>
    @Html.ActionLink("Add Category", "AddCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CategoryName)
    </td>
    <td>
        @Html.ActionLink("Delete Category", "Delete", new { id = item.CategoryName }, new { @style = "color: indianred" })
    </td>
</tr>
}

</table>
