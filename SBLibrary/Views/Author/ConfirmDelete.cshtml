@model IEnumerable<SBLibrary.Data.Models.Domain.Book>

@{
    ViewBag.Title = "ConfirmDelete";
}

<h2>Confirm delete</h2>


<h3>Are you sure you want to delete this author? @ViewBag.AuthorName</h3>

<h4>These books will also be deleted</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
        </tr>
    }

</table>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        @Html.ActionLink("Delete", "DelAuthor", new { id = ViewBag.AuthorId }, new { @class = "btn btn-danger" })
        @Html.ActionLink("Back to List", "GetAuthors")
    </div>
}
