@model SBLibrary.Data.Models.Domain.Book

@{
    ViewBag.Title = "ShareBook";
}

<h2>ShareBook</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Book</h4>*@
        <hr />

        @Html.HiddenFor(model => model.BookID)




        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label>@Html.DisplayFor(item => item.Title)</label>

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Email">EmailID</label>
            <div class="col-md-10">

                <input class="form-control text-box single-line" id="EmailID" name="EmailID" type="text" value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="Email" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Share Book" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Your Book List", "GetBooks")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
