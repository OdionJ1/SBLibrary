@model SBLibrary.Data.Models.Domain.UploadBook

@{
    ViewBag.Title = "Upload Book";
}

<h2>Upload Book</h2>

@using (Html.BeginForm("AddBook", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))


{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@*Add Book*@</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Author, (IEnumerable<SelectListItem>)ViewBag.authorList)
                @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                @Html.ActionLink("Add New Author", "AddAuthor", "Author")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Category, (IEnumerable<SelectListItem>)ViewBag.categoryList)
                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                @Html.ActionLink("Add New Category", "AddCategory", "Category")
            </div>
        </div>
        @ViewBag.message
        <input type="file" name="file" />



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("Back to List", "GetBooks", "Book")
</div>